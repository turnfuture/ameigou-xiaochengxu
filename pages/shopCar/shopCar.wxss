/* pages/cart/cart.wxss */

page {
  background-color: #f2f2f2;
}

.cartMsg {
  height: 100rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}

.cartMsg .allSelection {
  padding-left: 20rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}

.cartMsg .allSelection .iconfont {
  font-size: 50rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.cartMsg .buttonWrap {
  display: flex;
}

.cartMsg .buttonWrap .totalprice {
  height: 100rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 32rpx;
  padding-top: 16rpx;
  color: #970407;
}

.cartMsg .buttonWrap .desc {
  color: #999;
  margin: 0;
}

.cartMsg .buttonWrap .cartBtn {
  margin-left: 20rpx;
  height: 100rpx;
  background: #970407;
  width: 160rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 28rpx;
}

/* 编辑 */

.edit {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

/* 编辑标题 */

.edit_btn {
  position: absolute;
  font-size: 26rpx;
  color: #888;
  right: 30rpx;
}

.cartList {
  padding-bottom: 110rpx;
}

.list {
  height: 200rpx;
  border-bottom: 1rpx solid #e9e9e9;
  padding: 0 20rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  position: relative;
  background: #fff;
}

/* 单选状态 */

.radio_chek {
  position: absolute;
  left: 20rpx;
  top: 70rpx;
  width: 40rpx;
  height: 40rpx;
}

/* 列表商品图片 */

.list .goods {
  height: 180rpx;
  position: relative;
  padding: 10rpx 0;
  margin-left: 80rpx;
}

.list_img {
  width: 180rpx;
  height: 180rpx;
  float: left;
  margin-right: 20rpx;
}

.goods .goodsMsg {
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

/* 列表规格 */

.cart_g_name {
  font-size: 26rpx;
  color: #aaa;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 列表商品名称 */

.list_name {
  font-size: 28rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 列表商品价格 */

.list_price {
  font-size: 32rpx;
  color: #dd191d;
  line-height: 60rpx;
}

/* 列表商品删除 */

.list_del {
  position: absolute;
  right: 220rpx;
  bottom: 20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 44rpx;
}

/* 固定底部 */

.cont_bot {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  border-top: 2rpx solid #ebebeb;
  z-index: 9999;
}

/* 全选ICON */

.total-select {
  position: absolute;
  left: 20rpx;
  top: 30rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 全选标题 */

.sel_count_name {
  position: absolute;
  left: 90rpx;
  top: 6rpx;
  font-size: 30rpx;
  color: #333;
}

/* 合计金额 */

.count_price {
  position: absolute;
  font-size: 28rpx;
  left: 200rpx;
  color: #aaa;
}

.count_price text {
  font-size: 34rpx;
  color: #dd191d;
}

/* 购物车为空 */

.list_none {
  position: fixed;
  top: 40vh;
  left: 0;
  width: 100%;
  padding: 40rpx 0;
  color: #999;
  text-align: center;
  font-size: 30rpx;
}

/* 提交 */

.submit {
  position: absolute;
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  right: 0rpx;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  background-color: #f27132;
}

.dele_edit {
  position: absolute;
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  right: 0rpx;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  background-color: #dd191d;
}

.navigator-hover {
  background: none;
}

/*数量加减*/

.carts-num {
  position: absolute;
  right: 0rpx;
  bottom: 23rpx;
  display: flex;
  align-items: center;
  text-align: center;
  height: 60rpx;
}

.view_text_center {
  border: 1rpx solid #ebebeb;
  font-size: 30rpx;
  display: inline-block;
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
  width: 100rpx;
  vertical-align: middle;
}

.carts-num .minus, .carts-num .plus {
  border: 1rpx solid #ebebeb;
  font-size: 30rpx;
  display: inline-block;
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
  width: 60rpx;
  vertical-align: middle;
}
.carts-num .minus{
  font-size: 36rpx;
}

.nullCar {
  text-align: center;
  margin-top: 400rpx;
}

.nullCar image {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.nullCar text {
  color: #666;
  font-size: 30rpx;
}

.selectEit icon {
  top: 20rpx;
}
