/* pages/mineBarginShare/mineBarginShare.wxss */
page {
  height: 100%;
}

.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.content_div {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
}
.content_div .content_msg{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.top_div {
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  flex-shrink: 0;
  margin: 20rpx;
}

.bottom_div {
  margin: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  flex-grow: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.list_item {
  display: flex;
  overflow: hidden;
  padding: 20rpx;
  align-items: center;
  justify-content: space-between;
}

.list_item .item_left {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.list_item .item_right {
  flex-grow: 1;
  overflow: hidden;
}

.item_right .name {
  color: #333;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item_right .money {
  margin: 10rpx 0;
  overflow: hidden;
}

.item_right .money .price {
  float: left;
  color: #d50000;
  font-size: 32rpx;
  line-height: 60rpx;
}

.item_right .money .status {
  line-height: 60rpx;
  color: #d50000;
  font-size: 30rpx;
  float: right;
}

.item_right .money .pay {
  width: 150rpx;
  line-height: 60rpx;
  color: #d50000;
  font-size: 28rpx;
  border: 2rpx solid #d50000;
  border-radius: 10rpx;
  text-align: center;
  float: right;
}

.item_right .time {
  line-height: 60rpx;
  overflow: hidden;
}

.item_right .time .txt {
  color: #434343;
  font-size: 28rpx;
  margin-right: 10rpx;
  float: left;
}

.item_right .time .continue {
  width: 150rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
  background: #d50000;
  border-radius: 10rpx;
  text-align: center;
  float: right;
}

.good_count {
  color: #86b920;
  font-size: 28rpx;
  float: left;
}

.good_count .count_conutdown {
  width: 44rpx;
  line-height: 44rpx;
  background: #313131;
  color: #fff;
  text-align: center;
  display: inline-block;
  font-size: 24rpx;
  border-radius: 10rpx;
}

.good_count .count_colon {
  line-height: 60rpx;
  margin: 0 10rpx;
}

.bargin_money {
  margin: 40rpx;
}

.bargin_money .money {
  text-align: center;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.bargin_money .progress {
  width: 100%;
  height: 20rpx;
  border-radius: 40rpx;
  background: #fbe6e5;
  position: relative;
}

.bargin_money .progress .have {
  height: 20rpx;
  border-radius: 40rpx;
  background: #d50000;
  position: absolute;
  top: 0;
  left: 0;
}

.share {
  margin: 30rpx 120rpx;
  background: #ff6f1e;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  border-radius: 40rpx;
}

.bottom_div .user_title {
  background: #f6efef;
  line-height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  color: #dc4824;
  flex-shrink: 0;
}

.user_list {
  flex-grow: 1;
  overflow: hidden;
  background: #fff;
}

.user_list .list_div, .user_list .list_div scroll-view {
  height: 100%;
}

.list_div .user_item {
  padding: 20rpx;
  align-items: center;
  justify-content: space-between;
  display: flex;
  overflow: hidden;
}

.list_div .user_item .img {
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
  border-radius: 50%;
}

.list_div .user_item .right {
  flex-grow: 1;
  overflow: hidden;
}

.list_div .user_item .right .name {
  color: #333;
  font-size: 28rpx;
}

.list_div .user_item .right .name text {
  color: #dc4824;
}

.list_div .user_item .right .time {
  color: #aeaeae;
  font-size: 28rpx;
  /* margin-top: 10rpx; */
}
