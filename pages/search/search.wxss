/* pages/search/search.wxss */
.search_view{
padding: 20rpx;
border-bottom: 2rpx solid #eaeaea;
}
.search_div{
  line-height: 80rpx;
  background: #F6F6F6;
  padding:0 20px 0 60rpx;
  position: relative;
  border-radius: 40rpx;
}
.search_div .icon-search{
  color: #A0A0A0;
  font-size: 40rpx;
  position: absolute;
  top: 0rpx;
  left: 10rpx;
}
.search_div input{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.good_div {
  border-bottom: 2rpx solid #eaeaea;
  padding: 20rpx;
  display: flex;
  overflow: hidden;
  align-items: center;
  justify-content: space-between;
}

.good_div .img {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.good_div .good_right {
  flex-grow: 1;
  overflow: hidden;
}

.good_div .name {
  /* line-height: 50rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}

.good_bottom {
  overflow: hidden;
}

.good_bottom .money {
  float: left;
  font-size: 26rpx;
  color: #dd191d;
  line-height: 54rpx;
}

.good_bottom .money .price {
  margin-left: 5rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.good_bottom .icon-cart {
  float: right;
  font-size: 50rpx;
  color: #333;
}
.good_right .stock{
  color: #666;
  font-size: 28rpx;
}