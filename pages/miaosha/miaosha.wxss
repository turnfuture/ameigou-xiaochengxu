/* pages/miaosha/miaosha.wxss */
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.adverImg {
  width: 100%;
}
.good {
  background: white;
  padding: 20rpx;
  display: flex;
  border-bottom: 3rpx solid #f4f4f4;
  overflow: hidden;
  align-items: center;
  justify-content: space-between;
}

.good>image {
  width: 230rpx;
  height: 230rpx;
  margin-right: 20rpx;
flex-shrink: 0;
}
.good_list{
  width: 100%;
}
.name {
  color: #1b1b1b;
  font-size: 26rpx;
}

.gright {
  flex-grow: 1;
  overflow: hidden;
}
.gright .bottom{
  display: flex;
  overflow: hidden;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.gright .yi{
  color: #434343;
  margin: 10rpx 0;
  font-size: 30rpx;
}
.gright .bottom .now{
  font-size: 32rpx;
  color: #D50000;
  flex-shrink: 0;
}
.gright .bottom .before{
  color: #AEAEAE;
  text-decoration: line-through;
  flex-grow: 1;
  margin-left: 20rpx;
  overflow: hidden;
}
.gright .bottom .kj{
  width: 120rpx;
  line-height: 60rpx;
  flex-shrink: 0;
  border-radius: 10rpx;
  color: #d50000;
  border: 1rpx solid #d50000;
  text-align: center;
}

.gundong {
  color: #707070;
  white-space: nowrap;
  border-top: 2rpx solid #e5e5e5;

}

.gundong .before {
  width: 250rpx;
  display: inline-block;
  font-size: 30rpx;
  text-align: center;
  background: white;
  padding: 20rpx 0;
  border-right: 1rpx solid #f4f4f4;
  color: #707070;
}
.gundong .active {
  color: #970407;
  font-weight: bold;
  border-bottom: 4rpx solid #970407;
}

.activity {
  padding-bottom: 20rpx;
  border-bottom: 15rpx solid #f4f4f4;
}

.actGoods {
  width: 92%;
  margin: 0 auto;
  display: flex;
  padding-top: 20rpx;
}

.goodsList {
  width: 32%;
  margin-right: 1%;
}

.name {
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
}

 .box{
   width: 100%;

   height: 80rpx;
   background: #f4f4f4;
 }

.set {

  float: right;
  display: flex;
  margin: 20rpx;
}
.set>view{
  font-size: 28rpx;
  color: #434343;

}
.banner image{
  width: 100%;
}
.sTime text {
  background: #313131;
  color: white;
  display: inline-block;
  width: 50rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 10rpx;
}
