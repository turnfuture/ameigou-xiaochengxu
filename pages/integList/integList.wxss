/* pages/integList/integList.wxss */

.adverImg {
  width: 100%;
}

.list_div {
  margin: 20rpx;
}

.list_div .list_item {
  display: flex;
  overflow: hidden;
  padding: 20rpx;
  border-bottom: 2rpx solid #eaeaea;
  align-items: center;
  justify-content: space-between;
}

.list_item .item_left {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.list_item .item_right {
  flex-grow: 1;
  overflow: hidden;
}

.item_right .name {
  color: #333;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item_right .num {
  color: #434343;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
}
.item_right .money {
  overflow: hidden;
  color: #D50000;
  font-size: 28rpx;
}
.item_right .money .price{
  font-size: 36rpx;
  line-height: 60rpx;
  margin-left: 5rpx;
}

