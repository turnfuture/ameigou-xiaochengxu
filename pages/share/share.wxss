/* pages/share/share.wxss */
page{
  height: 100%;
}
canvas{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}
.share_div{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  z-index: 100;
  position: absolute;
  left: 0;
  top: 0;
  background: #fff;
}
.share_top{
  flex-grow: 1;
  overflow: hidden;
  /* padding-top: 20rpx; */
}
.share_top swiper{
  width: 100%;
  height: 100%;
}
.share_top swiper swiper-item{
  position: relative;
}
.share_top swiper image{
  width: 96%;
  height: 100%;
  border-radius: 10rpx;
}
.share_top swiper .content{
  width: 90%;
  position: absolute;
  bottom: 0rpx;
  left: 48%;
  transform: translateX(-50%);
  padding: 20rpx;
}
.share_top swiper .content .content_div{
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  overflow: hidden;
  align-items: center;
  justify-content: space-between;
}
.content_div .content_left{
  flex-grow: 1;
  margin-right: 20rpx;
}
.content_div .content_left image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
  border-radius: 50%;
}
.content_div .content_left .name{
  color: #333;
  margin:0 10rpx;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content_div .content_left .txt{
  background: #020202;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 40rpx;
}
.content_div .content_right{
  flex-shrink: 0;
}
.content_div .content_right image{
  width: 100rpx;
}
.share_bottom{
  flex-shrink: 0;
  display: flex;
}
.share_bottom .item{
  flex: 1;
  text-align: center;
  padding: 10rpx;
}
.share_bottom .item button{
  line-height: 40rpx;
  font-size: 28rpx;
  color: #6e6e6e;
  background: #fff;
  padding-left: 0;
  padding-right: 0;
  height: 138rpx;
  padding-top: 40rpx;
}
.share_bottom .item button::after {
  border: none
}
.share_bottom .item icon{
  font-size: 90rpx;
  color: #57bb7b
}
.share_bottom .item:last-child icon{
  color: #d9ad7c
}
.share_bottom .item text{
  width: 100%;
  display: block;
  text-align: center;
  color: #6e6e6e;
  font-size: 28rpx;
}