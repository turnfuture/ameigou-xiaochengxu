/* pages/wuliu/wuliu.wxss */
@import "../myOrder/myOrder.wxss";
.orderBtn text {
    color: #2979FF;
  border: 1rpx solid #2979FF;
}

@import "../../font/font.wxss";

.wuliu .stock, .wuliu .price {
  font-size: 28rpx;
  color: #1b1b1b;
}
.logistic_div.cur .icon-xuanzhong{
  color: #D50000;
}
.icon-xuanzhong {
  color: #dcdcdc;
}

.wlAdress {
  display: flex;
  width: 90%;
  padding-top: 35rpx;
  padding-bottom: 35rpx;
  padding-left: 5%;
  padding-right: 5%;
  border-bottom: 20rpx solid #F4F4F4;
  align-items: center;

}

.wlAdress image {
  width: 70rpx;
  height: 76rpx;
}

.wlAdress text {
  font-size: 26rpx;
  color: #7d7d7d;
  margin-left: 30px;
  height: 40rpx;
  line-height: 40rpx;
  text-align: justify;
  
}
.wlInfo{
  width: 100%;
  margin: 0 auto;
  background: white;
  font-size: 24rpx;
  padding-top: 25rpx;
}

.logistic_title{
  padding: 20rpx;
  color: #333;
  font-size: 30rpx;
  border-top: 20rpx solid #f5f5f5;
  border-bottom: 20rpx solid #f5f5f5;
}
.wlInfo .title{
  font-size: 30rpx;
  color: #000;
  padding: 20rpx;
  margin-top: 20rpx;
}
.wlInfo .logistic_div{
  display: flex;
  font-size: 24rpx;
  padding: 20rpx;
}
.wlInfo icon{
  margin-right: 20rpx;

}
.wlInfo .logistic_div text{
  display: inline-block;
  margin-top: 15rpx;
  color: #989898;
}
.address {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
  overflow: hidden;
  padding: 20rpx;
  margin-bottom: -24rpx;
}

.address .left {
  width: 38rpx;
  height: 50rpx;
  flex-shrink: 0;
}

.address .address_msg {
  flex-grow: 1;
  margin: 0 20rpx;
}

.address .address_msg .top {
  overflow: hidden;
  display: flex;
}

.address .address_msg .msg, .address .address_msg .top text {
  color: #333;
  font-size: 30rpx;
}

.address .address_msg .top text.name {
  flex-grow: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.address .address_msg .top text.phone {
  flex-shrink: 0;
}

.address .address_msg .msg {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.address .iconfont {
  font-size: 30rpx;
  color: #333;
  flex-shrink: 0;
}