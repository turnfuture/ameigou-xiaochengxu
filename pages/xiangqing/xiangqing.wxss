  padding-bottom: 20rpx;
}

/* 9.9专区 */

.activity {
  background: white;
  padding-bottom: 20rpx;
  border-bottom: 15rpx solid #f4f4f4;
  margin-top: 40rpx;
}

.actGoods {
  width: 92%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.goodsList {
  width: 48%;
  background-color: white;
  margin-bottom: 20rpx;
}

.goodsList .img {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  position: relative;
}

.goodsList .img image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.goodsList .name {
  font-size: 32rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
  display: block;
  margin: 6rpx 0;
}

.goodsList image~text {
  display: -webkit-box;
 
  font-size: 22rpx;
  margin: 10rpx auto;
}

.price {
  font-size: 18rpx;
  color: #dd191d;
}

.reality {
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 25rpx;
}

.Original {
  color: #7d7d7d;
}

.goodsList .low {
  font-size: 32rpx;
  color: #dd191d;
}

.evaluate_div {
  background: #fff;
}

.evaluate_div .evaluate_item {
  padding: 20rpx;
  border-bottom: 2rpx solid #eaeaea;
}

.evaluate_item .user_msg {
  display: flex;
  overflow: hidden;
  align-items: center;
  justify-content: space-between;
}

.evaluate_item .user_msg .img {
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
  border-radius: 50%;
}

.evaluate_item .user_msg .user_right {
  flex-grow: 1;
  overflow: hidden;
}

.evaluate_item .user_msg .user_right .msg {
  display: flex;
  overflow: hidden;
}

.evaluate_item .user_msg .user_right .msg .name {
  color: #333;
  font-size: 28rpx;
  flex-grow: 1;
  overflow: hidden;
}

.evaluate_item .user_msg .user_right .msg .time {
  flex-shrink: 0;
  font-size: 24rpx;
  color: #7d7d7d;
}

.evaluate_item .user_msg .user_right .start {
  overflow: hidden;
}

.evaluate_item .user_msg .user_right .start .iconfont {
  font-size: 40rpx;
  margin-right: 10rpx;
  color: #adadad;
}

.evaluate_item .user_msg .user_right .start .iconfont.sel {
  color: #e83632;
}

.evaluate_item .evalute_content {
  color: #434343;
  font-size: 28rpx;
  margin: 10rpx 0;
}

.evaluate_item .imgs {
  overflow: hidden;
}

.evaluate_item .imgs .img_item {
  width: 31.3%;
  height: 0;
  padding-bottom: 31.3%;
  margin-right: 1%;
  margin-bottom: 1%;
  position: relative;
  float: left;
}

.evaluate_item .imgs .img_item:nth-child(3n) {
  margin-right: 0;
}

.evaluate_item .imgs .img_item image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
