/* pages/xiangqing/xiangqing.wxss */
@import "/font/font.wxss";

.banner_div {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  position: relative;
}

.banner_div .banner {
  width: 100%;
  height: 100%;
  position: absolute;
}

.biaoti {
  display: flex;
  width: 94%;
  margin: 20rpx auto;
}

.biaoti .name {
  width: 86%;
  font-size: 32rpx;
  line-height: 1.5em;
  display: -webkit-box;
 
}

.service {
  width: 140rpx;
  text-align: center;
  font-size: 12px;
  color: #adadad;
  margin-left: 30rpx;
  background: #fff;
  line-height: 50rpx;
  border-left: 2rpx solid #eaeaea;
  border-radius: 0;
}
.service::after {
  border: none;
}

.service icon {
  display: block;
}

.division {
  width: 2rpx;
  height: 36rpx;
  margin-top: 25rpx;
  background: #adadad;
  margin-left: 5rpx;
}

.price, .item {
  width: 94%;
  margin: 0 auto;
}

.price {
  color: #e83632;
  font-size: 12px;
}

.price text {
  font-size: 34rpx;
  font-weight: bold;
}
.price text.orignal {
  color: #666;
  margin-left: 20rpx;
  font-size: 30rpx;
  font-weight: normal;
  text-decoration: line-through;
}

.item {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
  margin-bottom: 20rpx;
}

.item text {
  font-size: 12px;
  color: #7d7d7d;
}

.coLor {
  padding: 20rpx;
  border-top: 2rpx solid #eee;
  overflow: hidden;
}

.coLor text {
  font-size: 32rpx;
  float: left;
  line-height: 54rpx;
}

.coLor icon {
  float: right;
  font-size: 40rpx;
  margin-top: -5rpx;
}

.line {
  width: 100%;
  background: #eee;
  height: 15rpx;
}

/* 商品详情 */

.title {
  width: 100%;
  /* margin: 0 auto; */
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  margin-bottom: 20rpx;
}

.title view {
  display: flex;
}

.title icon {
  margin-top: 30rpx;
}

.title text {
  color: #000;
  font-size: 14px;
}

.active {
  border-bottom: 2rpx solid #970407;
  padding-left: 30rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  padding-top: -7rpx;
}

.active text {
  font-size: 34rpx;
  /* font-weight: bold; */
  margin-top: -7rpx;
  font-weight: bold;
}

/* 底部 */

.fooTer {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  align-items: center;
  overflow: hidden;
}

.coller {
  width: 140rpx;
  text-align: center;
  flex-shrink: 0;
  padding-bottom: 10rpx;
}
.fooTer .fooBtn{
  
  flex-grow: 1;
  overflow: hidden;
  display: flex;
  margin-left: 10rpx;
}
.coller text {
  display: block;
  font-size: 12px;
  text-align: center;
}

.coller icon {
  color: #aeaeae;
  display: block;
  font-size: 50rpx;
}

.shopCar, .buy {
  line-height: 98rpx;
  color: white;
  text-align: center;
  /* padding: 25rpx 0; */
  flex: 1;
  font-size: 34rpx;
  display: block;
}

.shopCar {
  background: #f27132;
  font-size: 34rpx;
}

.buy {
  background: #e83632;
  /* padding: 35rpx 71rpx; */
}

.bg {
  display: none;
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  /* z-index: 1001; */
  opacity: 0.9;
  filter: alpha(opacity=90);
  z-index: -1;
}

.mask {
  
  position: fixed;
  display: none;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 3;
  height: 100%;
}

.txt {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: royalblue;
}

/* 颜色分类 */

.colorClass {
  display: flex;
  font-size: 28px;
  position: relative;
  /* width: 98%; */
  margin: 0 20rpx 20rpx;
  min-height: 75px;
}

.colorClass image {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: -75rpx;
  left: 0;
  border-radius: 10rpx;
}

.colorClass .guige {
  font-size: 28rpx;
  margin-left: 240rpx;
  margin-top: 10rpx;
}

.colorClass .guige text {
  color: #e83632;
}

.colorClass icon {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 34rpx;
}

.color {
  margin: 0 20rpx;
  overflow: hidden;
}

.guige {
  margin-left: 50rpx;
  margin-top: 10rpx;
}

.guige text {
  font-size: 24rpx;
}

.guige text text {
  font-size: 28rpx;
}
.guige text.price {
  font-size: 34rpx;
}

.guige view {
  margin-top: 10rpx;
  color: #7d7d7d;
}

.colorBtn {
  width: 94%;
  margin: 0 auto;
  margin-top: 26rpx;
}

.colorBtn text {
  color: #7d7d7d;
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  display: inline-block;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.color>text, .numBer>text {
  font-size: 32rpx;
  color: #000;
}

.colorBtn text.active {
  color: white;
  background: #970407;
}

.clicks {
  color: green;
}

.numBer {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 20rpx;
  margin-top: 50rpx;
  margin-bottom: 80rpx;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
}

.numBer view text {
  font-size: 36rpx;
}

.redu, .add {
  display: inline-block;
  background: #f5f5f5;
  width: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.numBer view text.num{
  width: 100rpx;
  line-height: 80rpx;
  display: inline-block;
  text-align: center;
}

/* .redu {
  position: relative;
  top: -7rpx;
  height: 3rpx;
  background: #adadad;
} */

.add, .redu {
  color: #adadad;
  font-size: 24rpx;
}

.mask {
  padding: 20rpx 0;
  box-sizing: border-box;
}

.num {
  margin: 0 20rpx;
}

.sure {
  width: 100%;
  background: #dd191d;
  color: white;
  font-size: 36rpx;
  text-align: center;
  height: 100rpx;
  display: flex;
  line-height: 100rpx;
}

.sure view {
  flex: 1;
}

.sure view:first-child {
  border-right: 1rpx solid #fff;
}

.maskCont {
  width: 100%;
  position: fixed;
  bottom: 0;
  /* bottom: 130rpx; */
  left: 0;
  background: white;
  z-index: 3;
}
.mask.params{
 display: block;
}
.maskCont.maskParams{
  height: 600rpx;
}
.maskParams .params_div{
  padding: 30rpx;
}
.maskParams .icon-guanbi{
  position: absolute;
  right: 20rpx;
  top: 0;
  font-size: 34rpx;
}
.maskParams scroll-view{
  height: 100%;
}
.maskParams .params_item{
  margin-top: 20rpx;
}
.maskParams .params_item .params_title{
  color: #333;
  font-size: 30rpx;
}
.params_item .params_value{
  display: flex;
  overflow: hidden;
  padding: 20rpx;
}
.params_item .params_value text{
  color: #333;
  font-size: 28rpx;

}
.params_item .params_value text:first-child{
  width: 180rpx;
  margin-right: 10rpx;
  flex-shrink: 0;
  text-align: right;
}
.params_item .params_value text:last-child{
  flex-grow: 1;
  overflow: hidden;
}
.sHow {
  
  display: none;
}

.maskBg {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.585);
  z-index: 2;
}

