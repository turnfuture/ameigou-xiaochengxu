/* pages/bargainList/bargainList.wxss */

.adverImg {
  width: 100%;
}

.list_div {
  margin: 20rpx;
}

.list_div .list_item {
  display: flex;
  overflow: hidden;
  padding: 20rpx;
  border-bottom: 2rpx solid #eaeaea;
  align-items: center;
  justify-content: space-between;
}

.list_item .item_left {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.list_item .item_right {
  flex-grow: 1;
  overflow: hidden;
}

.item_right .name {
  color: #333;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item_right .money {
  margin: 10rpx 0;
  overflow: hidden;
}
.item_right .money .price{
  float: left;
  color: #333;
  font-size: 30rpx;
  line-height: 60rpx;
}
.item_right .money .status{
  line-height: 60rpx;
  color: #D50000;
  font-size: 30rpx;
  float: right;
}
.item_right .money .pay{
  width: 150rpx;
  line-height: 60rpx;
  color: #D50000;
  font-size: 28rpx;
  border: 2rpx solid #D50000;
  border-radius: 10rpx;
  text-align: center;
  float: right;
}
.item_right .time{
  line-height: 60rpx;
  overflow: hidden;
}
.item_right .time .txt{
  color: #434343;
  font-size: 28rpx;
  margin-right: 10rpx;
  float: left;
}
.item_right .time .continue{
  width: 150rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
  background: #D50000;
  border-radius: 10rpx;
  text-align: center;
  float: right;
}
.good_count{
  color: #86B920;
  font-size: 28rpx;
  float: left;
}
.good_count .count_conutdown{
  width: 44rpx;
  line-height: 44rpx;
  background: #313131;
  color: #fff;
  text-align: center;
  display: inline-block;
  font-size: 24rpx;
  border-radius: 10rpx;
}
.good_count .count_colon{
  line-height: 60rpx;
  margin: 0 10rpx;
}
