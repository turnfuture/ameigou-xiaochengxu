/* pages/evaluationGood/evaluationGood.wxss */
page{
  height: 100%;
  background: #f5f5f5;
}
page scroll-view{
  height: 100%;
}
.evaluate_list{
  background: #f5f5f5;
}
.evaluate_list .evaluate_item{
  background: #fff;
  margin-top: 10rpx;
  padding: 20rpx;
}
.evaluate_item .good_div{
  display: flex;
  overflow: hidden;
  padding-bottom: 20rpx;
  align-items: center;
  justify-content: space-between;
}
.evaluate_item .good_div .img{
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.evaluate_item .good_div .good_right{
  flex-grow: 1;
  overflow: hidden;
}
.evaluate_item .good_div .good_right .name{
  font-size: 30rpx;
  color: #333;
  white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.evaluate_item .good_div .good_right .score_div{
  display: flex;
  overflow: hidden;
  align-items: center;
  justify-content: space-between;
}
.evaluate_item .good_div .good_right .score_div .txt{
  font-size: 30rpx;
  color: #333;
  flex-shrink: 0;
}
.evaluate_item .good_div .good_right .score_div .start{
  flex-grow: 1;
  overflow: hidden;
}
.start text{
  margin-left: 10rpx;
  font-size: 50rpx;
  color: #DCDCDC;
}
.start text.sel{
  color: #E53935;
}
.evaluate_item .textarea{
  padding: 20rpx;
  border: 2rpx solid #eaeaea;
}
.evaluate_item .textarea textarea{
  width: 100%;
  font-size: 28rpx;
  height: 200rpx;
}
.evaluate_item .img_div{
  overflow: hidden;
  margin-top: 10rpx;
}
.evaluate_item .img_div .photo_add,
.evaluate_item .img_div .img{
  width: 30%;
  padding-bottom:30%; 
  margin-right: 1%;
  float: left;
  position: relative;
  margin-bottom: 1%;
}
.evaluate_item .img_div .img:nth-child(3n){
  margin-right: 0;
}
.evaluate_item .img_div .photo_add{
  border: 2rpx solid #eaeaea;
}
.evaluate_item .img_div .photo_add .icon-photo-add{
  color: #DCDCDC;
  font-size: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.evaluate_item .img_div .img image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.evaluate_item .img_div .img .icon-close{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 100;
}
.evaluate_list .btn{
  margin: 120rpx 120rpx 80rpx 120rpx;
  background: #4BC80E;
  color: #fff;
  font-size: 32rpx;
  line-height: 72rpx;
  border-radius: 40rpx;
  text-align: center;
}