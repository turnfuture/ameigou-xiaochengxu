/* pages/nine/nine.wxss */

.fullImg image {
  width: 100%;
  vertical-align: middle;
}

.boxContent {
  background: #d50000;
}

.boxContent>image {
  width: 433rpx;
  display: block;
  margin: 0 auto;
  /* height: 74rpx; */
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

/* 9.9专区 */

.activity {
  background: #d6241e;
  padding-bottom: 20rpx;
  /* border-bottom: 15rpx solid #f4f4f4; */
}

.actGoods {
  width: 92%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  /* text-align: center; *//* padding-top: 20rpx; */
}

.goodsList {
  width: 48%;
  background-color: white;
  margin-bottom: 20rpx;
}

.goodsList .img {
  width: 100%;
  height: 0rpx;
  padding-bottom: 100%;
  position: relative;
}

.goodsList .img image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.goodsList .img~text {
  height: 80rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  margin: 10rpx auto;
}

.price {
  font-size: 18rpx;
  color: #dd191d;
}

.reality {
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 25rpx;
}

.Original {
  color: #7d7d7d;
}

.jiu .title .line {
  border-left: 8rpx solid #ff353a;
}

.low {
  position: relative;
  padding-bottom: 5rpx;
}

/* .low text{
  font-size: 24rpx;
} */

.low image {
  width: 103rpx;
  height: 37rpx;
  vertical-align: top;
  margin-top: 10rpx;
}

.low image~text {
  display: inline-block;
  color: #dd191d;
}

.low text:nth-child(2) {
  position: absolute;
  left: 27rpx;
  top: 10rpx;
  color: white;
  font-size: 24rpx;
}

.low text:last-child {
  background: #dd191d;
  border-radius: 20rpx;
  text-align: center;
  color: white;
  padding: 5rpx 15rpx;
  float: right;
  margin-right: 7rpx;
  font-size: 22rpx;
  margin-top: 8rpx;
}

