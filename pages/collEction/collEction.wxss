/* pages/collEction/collEction.wxss */
.good_div {
  border-bottom: 2rpx solid #eaeaea;
  padding: 20rpx;
  display: flex;
  overflow: hidden;
  align-items: center;
  justify-content: space-between;
}

.good_div .img {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.good_div .good_right {
  flex-grow: 1;
  overflow: hidden;
}

.good_div .name {
  /* line-height: 50rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}

.good_bottom {
  overflow: hidden;
  margin-top: 20rpx;
}

.good_bottom .money {
  float: left;
  font-size: 26rpx;
  color: #D50000;
  line-height: 54rpx;
}

.good_bottom .money .price {
  margin-left: 5rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.good_bottom .btn {
  width: 160rpx;
  line-height: 60rpx;
  float: right;
  font-size: 28rpx;
  color: #D50000;
  border-radius: 40rpx;
  border: 2rpx solid #D50000;
  text-align: center;
}
