/* pages/address/address.wxss */
@import "../../font/font";

page {
  width: 100%;
  height: 100%;
}

.noAress {
  text-align: center;
  line-height: 400rpx;
  font-size: 30rpx;
  color: #666;
}
.addAress{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 25rpx 0;
  background: #970407;
  text-align: center;
  color: white;
  font-size: 28rpx;
}


/* 收货地址样式 */
.addressList{
  padding: 0 20rpx;
  background: #fff;
  border-bottom: 1px solid #ccc;
   margin-bottom: 20rpx;
}
.userSite .addressList:last-child{
  margin-bottom: 100rpx;
} 
.address .addressList .userMsg{
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  justify-content: space-between;
} 
.address .addressList .addressMsg{
  font-size: 28rpx;
  line-height: 60rpx;
  color: #666;
}
.address .addressList .siteSet{
  border-top: 1px solid #eee;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.addressList .siteSet .siteLeft{
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.siteSet .siteLeft .default{
  color: #970407;
}
.siteSet .siteLeft .default1{
  color: #666;
}
.siteSet .siteLeft icon{
  margin-right: 20rpx;
}
.addressList .siteSet .siteRight{
  display: flex;
  align-items: center;
}
.siteSet .siteRight .siteEdit{
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
}
.siteRight .siteEdit text{
  line-height: 80rpx;
    float: left;
}
.siteSet .siteRight .siteDel{
  font-size: 26rpx;
  color: #666;
}
.siteRight .siteDel text{
  line-height: 80rpx;
  display: inline-block;
}
.siteSet .siteRight .iconfont{
  font-size: 40rpx;
  line-height: 80rpx;
  margin-right: 10rpx;
  color: #999;
  float: left;
}
.siteSet .siteRight .icon-shanchu{
  font-size: 32rpx;

}